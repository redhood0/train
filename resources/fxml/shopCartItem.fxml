<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="cardPane" prefHeight="150" prefWidth="1000" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShopCartItemController">
    <children>


        <StackPane AnchorPane.leftAnchor="10" AnchorPane.topAnchor="15">

            <effect>
                <DropShadow>
                    <radius>5</radius>
                    <offsetY>2.0</offsetY>
                </DropShadow>
            </effect>
            <children>

                <ImageView fx:id="photo" fitHeight="120" fitWidth="120" layoutX="3.0" layoutY="8.0">
                </ImageView>
            </children>
        </StackPane>


        <Label fx:id="name" alignment="CENTER" layoutX="180.0" layoutY="70.0" prefHeight="20.0" prefWidth="86.0"
               text="商品名称" textAlignment="CENTER" AnchorPane.leftAnchor="180.0" AnchorPane.topAnchor="70.0"/>
        <Label fx:id="price" alignment="CENTER" layoutX="348.0" layoutY="70.0" prefHeight="20.0" prefWidth="73.0"
               text="单价" textAlignment="CENTER" AnchorPane.leftAnchor="348.0" AnchorPane.topAnchor="70.0"/>
        <Label fx:id="num" alignment="CENTER" contentDisplay="CENTER" layoutX="500.0" layoutY="70.0" prefHeight="20.0"
               prefWidth="73.0" text="数量" textAlignment="CENTER" AnchorPane.leftAnchor="500.0"
               AnchorPane.topAnchor="70.0"/>
        <Label fx:id="total" alignment="CENTER" layoutX="681.0" layoutY="70.0" prefHeight="20.0" prefWidth="73.0"
               text="金额" textAlignment="CENTER" AnchorPane.leftAnchor="681.0" AnchorPane.topAnchor="70.0"/>
        <Button fx:id="bt_favourit" layoutX="847.0" layoutY="40.0" mnemonicParsing="false" text="加入收藏夹"/>
        <Button fx:id="bt_delet" layoutX="847.0" layoutY="90.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="95.0" text="删除"/>
    </children>

</AnchorPane>
